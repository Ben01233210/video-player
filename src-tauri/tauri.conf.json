{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "video-player",
  "version": "0.1.0",
  "identifier": "com.video-player.app",
  
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
    
  },
  "app": {
    
    

    "windows": [
      {
        "title": "video-player",
        "width": 800,
        "height": 600,
        "transparent": true,
        "center": true
      }
    ]
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
        "bin"
      ]
  },

      "plugins": {
    "cli": {
      "description": "MPV Tauri",
      "args": [
        {
          "name": "source",
          "index": 1,
          "takesValue": true
        }
      ]
    }
  }
}

